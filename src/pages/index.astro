---
import Layout from '~/layouts/PageLayout.astro';

import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps from '~/components/widgets/Steps.astro';

const metadata = {
  title: 'hurdalab â€” Mobile app development company creating innovative solutions',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
        icon: 'tabler:mail',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'hurdalab Hero Image' }}
  >
    <Fragment slot="title">
      Innovative <span class="hidden xl:inline">Mobile Applications</span>
      <span class="text-accent dark:text-white highlight"> That Drive Business Growth</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">hurdalab</span> is a professional mobile application development company specialized
        in creating innovative and user-friendly solutions
      </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">hurdalab: Innovation-driven.</span>
      We build custom mobile applications for iOS and Android that help businesses connect with their customers and streamline
      operations.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What you get with hurdalab"
    subtitle="Professional mobile application development services with a focus on innovation, quality, and user experience."
    items={[
      {
        title: 'Custom Mobile App Development',
        description:
          'Tailored solutions for iOS and Android platforms designed to meet your specific business requirements.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'UI/UX Design',
        description:
          'Intuitive and engaging user interfaces that provide exceptional user experiences and increase engagement.',
        icon: 'tabler:palette',
      },
      {
        title: 'Cross-Platform Solutions',
        description:
          'Efficient development using Flutter and React Native for consistent experiences across multiple platforms.',
        icon: 'tabler:apps',
      },
      {
        title: 'Performance Optimization',
        description: 'Fast, responsive applications that perform well even under challenging network conditions.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Integration Services',
        description:
          'Seamless connections with your existing systems, third-party services, payment gateways, and APIs.',
        icon: 'tabler:plug-connected',
      },
      {
        title: 'Ongoing Support & Maintenance',
        description:
          'Continuous updates, bug fixes, and performance improvements to ensure your app remains competitive.',
        icon: 'tabler:refresh',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Our Approach"
    title="hurdalab's Vision: User Experience and Functionality!"
    items={[
      {
        title: 'User-Centered Design',
        description:
          'We put users at the center of our development process, creating interfaces that are intuitive and engaging.',
      },
      {
        title: 'Modern Technology Stack',
        description:
          'We utilize the latest technologies and frameworks to build robust, scalable, and high-performance applications.',
      },
      {
        title: 'Cross-platform compatibility',
        description:
          'Our applications work seamlessly across different devices and operating systems, providing a consistent experience for all users.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'hurdalab Team',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building for the Mobile Future</h3>
      Gain a competitive advantage with innovative mobile applications that transform your business
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'High level of customization',
        description: `Tailor the template effortlessly to match your brand's identity and requirements, making your website distinct and saving you time.`,
      },
      {
        title: 'Multiple layout possibilities',
        description:
          'Explore various layout options to find the structure that best presents your content, enhancing user engagement and navigation.',
      },
      {
        title: 'Fully responsive design',
        description:
          "Ensure your website's optimal performance on various devices and screen sizes, providing a consistent and enjoyable user experience.",
      },
      {
        title: 'Integration of media',
        description:
          'Seamlessly incorporate images, videos, and multimedia elements that enhance your content and engage visitors effectively.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">Ensure your online presence truly represents you.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Enhanced user engagement',
        description:
          'Captivate your audience with interactive elements, intuitive navigation, and visually appealing layouts, encouraging longer visits.',
      },
      {
        title: 'Continuous improvement',
        description:
          'Ensure your website stays aligned with the latest trends and technologies through regular updates and enhancements.',
      },
      {
        title: 'Time and resource efficiency',
        description:
          'Skip the time-consuming process of building mobile applications from scratch and launch your digital solution sooner with hurdalab.',
      },
      {
        title: 'Community support',
        description: `Join the growing hurdalab community for insights, resources, and assistance, ensuring you're never alone on your mobile app development journey.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot="content">Designed to foster growth and success.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Get your dream mobile application up and running in no time with hurdalab."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Discovery & Planning</span>',
        description:
          'We begin by understanding your business goals and app requirements. Our team conducts market research and creates a detailed project roadmap to guide the development process.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Step 2: <span class="font-medium">Design & Prototyping</span>',
        description:
          'Our designers create intuitive, user-friendly interfaces that align with your brand. We develop interactive prototypes to visualize the user experience before development begins.',
        icon: 'tabler:palette',
      },
      {
        title: 'Step 3: <span class="font-medium">Development & Testing</span>',
        description:
          'Our development team builds your application using the latest technologies and best practices. Rigorous testing ensures your app is bug-free and performs optimally across all devices.',
        icon: 'tabler:code',
      },
      {
        title: 'Step 4: <span class="font-medium">Launch & Support</span>',
        description:
          'We handle the app store submission process and support you through the launch phase. Our partnership continues with ongoing maintenance and feature enhancements.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Mobile App Development Process',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Mobile App Expertise"
    subtitle="We specialize in creating different types of mobile applications across various industries"
    tagline="Solutions"
    items={[
      {
        title: 'E-commerce Apps',
        description: 'Custom shopping experiences with secure payment processing and inventory management.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Social Networking',
        description: 'Connect communities with feature-rich social platforms that foster engagement and interaction.',
        icon: 'tabler:users',
      },
      {
        title: 'Healthcare & Fitness',
        description:
          'Wellness applications with tracking features, personalized recommendations, and secure health data management.',
        icon: 'tabler:heartbeat',
      },
      {
        title: 'Business & Productivity',
        description: 'Tools that streamline workflows, enhance team collaboration, and increase business efficiency.',
        icon: 'tabler:briefcase',
      },
      {
        title: 'Food & Delivery',
        description:
          'Order management systems with real-time tracking, multiple payment options, and vendor integrations.',
        icon: 'tabler:chef-hat',
      },
      {
        title: 'Travel & Hospitality',
        description:
          'Booking platforms with reservation management, personalized recommendations, and travel itineraries.',
        icon: 'tabler:plane',
      },
      {
        title: 'Education & eLearning',
        description: 'Interactive learning experiences with progress tracking, assessments, and multimedia content.',
        icon: 'tabler:school',
      },
      {
        title: 'Entertainment & Media',
        description:
          'Content streaming and delivery platforms with personalized recommendations and user engagement features.',
        icon: 'tabler:device-tv',
      },
      {
        title: 'Finance & Banking',
        description:
          'Secure financial applications with transaction processing, account management, and financial insights.',
        icon: 'tabler:coin',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Our Blog"
    information={`Discover insights, tips, and trends in mobile app development from our expert team.
                  Stay updated on the latest technologies and best practices in the mobile app industry.
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Dive into the following questions to gain insights into the powerful services that hurdalab offers and how it can elevate your mobile application strategy."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Why hurdalab?',
        description:
          'hurdalab creates innovative mobile applications that transform your business. Our team of experts delivers high-quality solutions tailored to your specific needs and requirements.',
      },
      {
        title: 'What do I need to start a mobile app project?',
        description:
          "To start your mobile app project with hurdalab, you need a clear idea of your app's purpose, target audience, and key features. Our team will guide you through the rest of the process.",
      },
      {
        title: 'How is the mobile app development process?',
        description:
          'Our development process includes planning, design, development, testing, and deployment phases. We work closely with you at each stage to ensure your app meets your expectations and business goals.',
      },
      {
        title: 'What platforms do you develop for?',
        description:
          'We develop mobile applications for iOS, Android, and cross-platform solutions depending on your requirements and target audience.',
      },
      {
        title: 'Do you provide ongoing support after app launch?',
        description:
          'Yes, we offer comprehensive support and maintenance services to ensure your app continues to function smoothly and stays up-to-date with the latest technologies and platform requirements.',
      },
      {
        title: 'How long does it take to develop a mobile app?',
        description:
          'Development time varies depending on the complexity of your project. Simple apps may take 2-3 months, while more complex applications can take 4-6 months or longer to complete.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Apps Delivered', amount: '50+' },
      { title: 'Client Satisfaction', amount: '99%' },
      { title: 'Years Experience', amount: '8+' },
      { title: 'Team Members', amount: '12' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start Your Project',
        href: '/contact',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to build your&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap"
        >mobile application?</span
      >
    </Fragment>

    <Fragment slot="subtitle">
      Contact our team today to discuss your project requirements and get started on your mobile app journey.
    </Fragment>
  </CallToAction>
</Layout>
