---
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Us - hurdalab',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'hurdalab Team',
    }}
  >
    <Fragment slot="title">
      We are <span class="text-accent dark:text-white highlight">hurdalab</span>
    </Fragment>

    <Fragment slot="subtitle">
      A team of passionate mobile developers dedicated to creating innovative and user-friendly applications that solve
      real-world problems. With expertise across multiple platforms and technologies, we deliver exceptional digital
      experiences that exceed client expectations.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Company Statistics"
    stats={[
      { title: 'Team Members', amount: '12' },
      { title: 'Projects Delivered', amount: '50+' },
      { title: 'Years Experience', amount: '8' },
      { title: 'Client Satisfaction', amount: '99%' },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    title="Our Mission"
    items={[
      {
        title: 'Innovation-Driven',
        description: "We constantly push the boundaries of what's possible with mobile technology.",
      },
      {
        title: 'User-Focused',
        description: 'We create applications that prioritize user experience and accessibility.',
      },
      {
        title: 'Quality-Obsessed',
        description: 'We maintain the highest standards in every line of code and pixel of design.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1535957998253-26ae1ef29506?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Mission Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building for the Future</h3>
      At hurdalab, we're dedicated to transforming ideas into exceptional mobile experiences. Our mission is to create applications
      that not only meet current needs but anticipate future ones.
    </Fragment>
  </Content>

  <!-- Features3 Widget ************** -->

  <Features3
    title="Meet Our Leadership"
    subtitle="Our team is led by experienced professionals with deep expertise in mobile development and product design."
    columns={2}
    isBeforeContent={true}
    items={[
      {
        title: 'Furkan Olkay',
        description:
          'Software Engineer | Mobile Team Lead | Flutter Developer. With years of experience in cross-platform development, Furkan leads our mobile engineering team with expertise in Flutter and React Native.',
        icon: 'tabler:user',
      },
      {
        title: 'Onurcan Ari',
        description:
          'Senior Backend Developer with full stack expertise. Specializes in building robust server architectures and APIs that power our mobile applications. Experienced in cloud infrastructure, database optimization, and system integration.',
        icon: 'tabler:user',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Development Approach"
    subtitle="We follow a structured, collaborative process that ensures your mobile app is delivered on time, within budget, and exceeds expectations."
    items={[
      {
        title: 'Discovery',
        description:
          'We start by understanding your business goals, target audience, and technical requirements. This phase includes market research, competitive analysis, and feature prioritization.',
      },
      {
        title: 'Design & Prototyping',
        description:
          'Our design team creates intuitive wireframes and interactive prototypes that visualize the user experience. We collaborate closely with you to refine the design before development begins.',
      },
      {
        title: 'Development',
        description:
          'Using the latest technologies and frameworks, our development team builds your application with clean, efficient code. We employ agile methodologies with regular demos and feedback sessions.',
      },
      {
        title: 'Testing & Refinement',
        description:
          'Rigorous testing across devices and platforms ensures your app is bug-free and performs optimally. We conduct usability testing, performance testing, and security audits.',
      },
      {
        title: 'Launch & Growth',
        description:
          'We handle the app store submission process and provide support during the launch phase. Our partnership continues with analytics, maintenance, and feature enhancements.',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Technologies We Use"
    subtitle="We stay at the forefront of mobile technology to deliver cutting-edge solutions."
    columns={3}
    items={[
      {
        title: 'Flutter',
        description: 'Cross-platform development for beautiful native apps',
        icon: 'tabler:brand-flutter',
      },
      {
        title: 'React Native',
        description: 'JavaScript framework for native mobile experiences',
        icon: 'tabler:brand-react-native',
      },
      {
        title: 'Native iOS',
        description: "Swift development for Apple's ecosystem",
        icon: 'tabler:brand-apple',
      },
      {
        title: 'Native Android',
        description: 'Kotlin and Java development for Android devices',
        icon: 'tabler:brand-android',
      },
      {
        title: 'Firebase',
        description: 'Backend services for mobile app infrastructure',
        icon: 'tabler:brand-firebase',
      },
      {
        title: 'GCP',
        description: 'Google Cloud Platform for scalable and reliable infrastructure',
        icon: 'tabler:cloud',
      },
      {
        title: 'Supabase',
        description: 'Open source Firebase alternative with PostgreSQL database',
        icon: 'tabler:database',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get In Touch"
    subtitle="We'd love to hear about your project and how we can help."
    columns={2}
    items={[
      {
        title: 'Email Us',
        description: 'contact@hurdalab.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Call Us',
        description: '+90 212 555 1234',
        icon: 'tabler:phone',
      },
    ]}
  />
</Layout>
